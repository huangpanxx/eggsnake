package com.maple.eggsnake;

import com.badlogic.gdx.Game;
import com.badlogic.gdx.backends.jogl.JoglApplication;
import com.maple.eggsnake.screens.StartScreen;

public class EggSnake extends Game {

	private static EggSnake instance = null;

	public static EggSnake getInstance() {
		synchronized (instance) {
			if (instance == null)
				instance = new EggSnake();
		}
		return instance;
	}

	private EggSnake() { }

	public static void main(String args[]) {
		new JoglApplication(EggSnake.getInstance(), "EggSnake", 480, 320, true);
	}

	@Override
	public void create() {
		this.setScreen(new StartScreen());
	}
}
