/* 
 * Description	: default logger getter and setter
 * Author		: 黄攀
 * Created		: 2012-1-3
 */


package com.maple.eggsnake.logger;

public class DefaultLogger implements Loggable {

	private static Loggable instance;

	public static Loggable getInstace() {
		synchronized (instance) {
			if (instance == null)
				instance = new DebugLogger();
		}
		return instance;
	}

	public static void setDefaultLogger(Loggable logger) {
		synchronized (instance) {
			instance = logger;
		}
	}

	// Cannot instant DefaultLogger
	private DefaultLogger() {

	}

	@Override
	public void Log(String patten, Object... args) {
		DefaultLogger.getInstace().Log(
				"Default Log is called! No codes should reach here.");

	}

	@Override
	public void Log(int level, String patten, Object... args) {
		DefaultLogger.getInstace().Log(
				"Default Log is called! No codes should reach here.");
	}
}
